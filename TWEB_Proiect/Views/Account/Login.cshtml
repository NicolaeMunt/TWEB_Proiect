@model TWEB_Proiect.Models.LoginViewModel

@{
    ViewBag.Title = "Login";
}

@section Head {
    <style>
        .login-page-container {
            background: linear-gradient(135deg, #1a237e 0%, #3949ab 50%, #7986cb 100%);
            min-height: calc(100vh - 200px);
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 40px 20px;
        }

        .login-form-container {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            padding: 40px;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
            border: 1px solid rgba(124, 77, 255, 0.3);
            max-width: 450px;
            width: 100%;
            transition: all 0.3s ease;
        }

            .login-form-container:hover {
                transform: translateY(-5px);
                box-shadow: 0 20px 40px rgba(0, 0, 0, 0.25);
            }

            .login-form-container h2 {
                color: #7c4dff;
                font-size: 32px;
                font-weight: 700;
                text-align: center;
                margin-bottom: 10px;
                text-transform: uppercase;
                letter-spacing: 2px;
            }

            .login-form-container h4 {
                color: #666;
                font-size: 16px;
                text-align: center;
                margin-bottom: 30px;
                font-weight: 400;
            }

            .login-form-container hr {
                border: none;
                border-top: 2px solid rgba(124, 77, 255, 0.3);
                margin: 20px 0;
            }

        .form-group {
            margin-bottom: 25px;
            position: relative;
        }

            .form-group .control-label {
                color: #7c4dff;
                font-weight: 600;
                margin-bottom: 8px;
                display: block;
                font-size: 14px;
                text-align: left;
            }

            .form-group .form-control {
                width: 100%;
                height: 50px;
                padding: 15px 20px;
                font-size: 16px;
                color: #1a237e;
                background: rgba(124, 77, 255, 0.05);
                border: 2px solid rgba(124, 77, 255, 0.3);
                border-radius: 25px;
                outline: none;
                transition: all 0.3s ease;
                font-weight: 500;
                box-sizing: border-box;
            }

                .form-group .form-control:focus {
                    border-color: #7c4dff;
                    background: rgba(124, 77, 255, 0.1);
                    box-shadow: 0 0 15px rgba(124, 77, 255, 0.3);
                }

        .checkbox {
            display: flex;
            align-items: center;
            gap: 10px;
            margin-bottom: 30px;
            padding: 0;
        }

            .checkbox input[type="checkbox"] {
                width: 18px;
                height: 18px;
                accent-color: #7c4dff;
                margin: 0;
            }

            .checkbox label {
                color: #666;
                font-size: 14px;
                font-weight: 500;
                cursor: pointer;
                margin: 0;
            }

        .btn-primary {
            width: 100%;
            height: 50px;
            background: linear-gradient(45deg, #7c4dff, #ba68c8);
            color: #ffffff;
            border: none;
            border-radius: 25px;
            font-size: 16px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
            cursor: pointer;
            transition: all 0.3s ease;
            text-shadow: 0 2px 4px rgba(0,0,0,0.4);
            margin-bottom: 20px;
        }

            .btn-primary:hover {
                background: linear-gradient(45deg, #9c27b0, #d81b60);
                transform: translateY(-2px);
                box-shadow: 0 8px 25px rgba(124, 77, 255, 0.4);
                color: #ffffff;
                text-decoration: none;
            }

        .text-danger {
            color: #f44336 !important;
            font-size: 12px;
            margin-top: 5px;
            display: block;
        }

        .validation-summary-errors {
            background: rgba(244, 67, 54, 0.1);
            border: 1px solid #f44336;
            border-radius: 10px;
            padding: 15px;
            margin-bottom: 20px;
            color: #f44336;
        }

        .login-link {
            text-align: center;
            margin-top: 20px;
            padding-top: 20px;
            border-top: 1px solid rgba(124, 77, 255, 0.2);
        }

            .login-link a {
                color: #7c4dff;
                text-decoration: none;
                font-weight: 600;
                font-size: 16px;
                transition: all 0.3s ease;
            }

                .login-link a:hover {
                    color: #9c27b0;
                    text-decoration: underline;
                }

        .additional-links {
            text-align: center;
            margin-top: 15px;
            margin-bottom: 15px;
        }

            .additional-links a {
                color: #7c4dff;
                text-decoration: none;
                font-weight: 500;
                font-size: 14px;
                transition: all 0.3s ease;
                margin: 0 10px;
            }

                .additional-links a:hover {
                    color: #9c27b0;
                    text-decoration: underline;
                }

        .form-horizontal .form-group {
            margin-left: 0;
            margin-right: 0;
        }

        .form-horizontal .control-label {
            text-align: left;
            padding-top: 0;
        }

        .col-md-2, .col-md-10, .col-md-offset-2 {
            width: 100%;
            padding-left: 0;
            padding-right: 0;
        }

        .login-form-container:focus-within {
            box-shadow: 0 20px 45px rgba(124, 77, 255, 0.25);
        }
    </style>
}

<div class="login-page-container">
    <div class="login-form-container">
        <h2>@ViewBag.Title</h2>

        @using (Html.BeginForm("Logare", "Cont", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h4>Bine ai venit</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger validation-summary-errors" })

            <div class="form-group">
                @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                <div>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Introdu poșta electronică" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                <div>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Introdu parola" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div>
                    <div class="checkbox">
                        @Html.CheckBoxFor(m => m.RememberMe)
                        @Html.LabelFor(m => m.RememberMe)
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div>
                    <input type="submit" value="Log in" class="btn btn-primary" />
                </div>
            </div>
        }

        <div class="additional-links">
            <a href="#forgot-password">Ai uitat parola?</a>
            <a href="#resend-confirmation">Retrimit confirmare pe email</a>
        </div>

        <div class="login-link">
            @Html.ActionLink("Nu ai cont? Înregistrează-te", "Register")
        </div>
    </div>
</div>