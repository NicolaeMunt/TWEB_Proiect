<!DOCTYPE html>
<html lang="ro">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title - INJÎNER</title>

    @* -------------  CSS  bundles ------------- *@
    @Styles.Render("~/Content/css")
    <link href="~/Content/css/Style-blue-theme.css" rel="stylesheet" />

    @* -------------  per-view extra <head> stuff ------------- *@
    @RenderSection("Head", required: false)
</head>
<body>
    @* Navbar теперь только в _NavBar.cshtml *@
    @Html.Partial("_NavBar")

    <main role="main" class="container">
        @RenderBody()
    </main>

    @if (ViewBag.HideFooter == null || ViewBag.HideFooter == false)
    {
        @Html.Partial("_Footer")
    }

    @* -------------  JS  bundles (order matters!) ------------- *@
    @Scripts.Render("~/bundles/bootstrap", "~/bundles/jqueryval")

    @* -------------  per-view extra scripts ------------- *@
    @RenderSection("Scripts", required: false)
</body>
</html>