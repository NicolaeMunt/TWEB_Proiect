                                                                 <a href="@Url.Action("Details", "Question", new { id = question.Id })" class="q-type23 button-ques2973">
                                                                      <i class="fa fa-user-circle-o" aria-hidden="true"></i> @question.Views vizualizări
                                                                 </a>
                                                            </div>
                                                       </div>
                                                  </div>
                                             </div>
