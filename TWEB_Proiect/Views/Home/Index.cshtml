                                             {
                                                  <a href="@Url.Action("Ask", "Question")" class="btn">
                                                       <i class="fa fa-plus"></i> Pune prima întrebare
                                                  </a>
                                             }
                                             else
                                             {
                                                  <p style="color: #666; margin-top: 15px;">
                                                       <i class="fa fa-info-circle"></i>
