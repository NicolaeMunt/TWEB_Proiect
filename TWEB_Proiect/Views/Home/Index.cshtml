                    <!--end of col-md-9 -->
                    <!--start col-md-3 (side bar)-->
                    <aside class="col-md-3 sidebar97239">
                         <div class="status-part3821">
                              <h4>Stats</h4>
                              <a href="@Url.Action("List", "Question")">
                                   <i class="fa fa-question-circle" aria-hidden="true"> Întrebări(@Model.TotalQuestions)</i>
