@model TWEB_Proiect.Models.LoginViewModel
@{
    ViewBag.Title = "LogIn";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
<body>
    <div class="login-page-container">
        <div class="login-form-container">
            <h2 class="login-title">LOGARE</h2>
            <p class="login-subtitle">Salutare, aici te loghezi pentru a da o întrebare</p>

            <form>
                <div class="form-group">
                    <input type="text" class="login-input" placeholder="Nume Utilizator" />
                </div>

                <div class="form-group">
                    <input type="password" class="login-input" placeholder="Parolă" />
                </div>

                <div class="remember-me-container">
                    <input type="checkbox" class="remember-me-checkbox" id="remember" />
                    <label class="remember-me-label" for="remember">Te Memorez?</label>
                </div>

                <div class="login-buttons-container">
                    <button type="submit" class="login-btn">Logare</button>
                    <button type="button" class="create-account-btn">Creare Cont</button>
                </div>
            </form>
        </div>
    </div>
</body>
